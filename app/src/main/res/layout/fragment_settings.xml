<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="top|center"
    android:padding="16dp"
    android:background="?attr/colorOnBackground"
    tools:context=".fragment.FragmentHome">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="?attr/android:textColor"
        android:textSize="24sp"
        android:padding="30dp"
        android:paddingBottom="8dp"
        android:gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="30dp"
            tools:ignore="DuplicateIds">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corner"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:text="Profil"
                        android:textColor="?attr/android:textColor"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="43dp"
                        android:layout_height="wrap_content"
                        android:paddingEnd="8dp"
                        android:src="@drawable/baseline_person_24"
                        app:tint="?attr/android:iconTint" />

                    <View
                        android:layout_width="160dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" /> <!-- Ajout d'une vue vide avec poids pour pousser le bouton vers la droite -->

                    <ImageButton
                        android:id="@+id/editProfileButton"
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Edit Profile"
                        android:padding="5dp"
                        android:src="@drawable/baseline_arrow_forward_ios_24"
                        android:tint="@color/gris"
                        tools:ignore="UseAppTint" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Voir le profil"
                    android:textColor="?attr/android:textColor"
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corner"
                android:elevation="2dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">


                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thème"
                        android:textColor="?attr/android:textColor"
                        android:textSize="18sp"
                        android:paddingBottom="8dp"/>

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="wrap_content"
                        android:paddingEnd="8dp"
                        android:src="@drawable/baseline_nightlight_round_24"
                        app:tint="?attr/android:iconTint"/>

                    <Switch
                        android:id="@+id/themeSwitch"
                        android:layout_width="206dp"
                        android:layout_height="6dp"
                        android:checked="false"
                        android:textColor="@color/black" />

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corner"
                android:elevation="2dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notifications"
                        android:textColor="?attr/android:textColor"
                        android:textSize="18sp"
                        android:paddingBottom="8dp"/>

                    <ImageView
                        android:id="@+id/notificationIcon"
                        android:layout_width="44dp"
                        android:layout_height="wrap_content"
                        android:paddingEnd="8dp"
                        android:src="@drawable/baseline_notifications_none_24"
                        app:tint="?attr/android:iconTint"/>

                    <Switch
                        android:id="@+id/notif"
                        android:layout_width="161dp"
                        android:layout_height="6dp"
                        android:checked="false"
                        android:textColor="@color/black" />

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="30dp"
            tools:ignore="DuplicateIds">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corner"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:text="À Propos"
                        android:textColor="?attr/android:textColor"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="47dp"
                        android:layout_height="wrap_content"
                        android:paddingEnd="8dp"
                        app:tint="?attr/android:iconTint"
                        android:src="@drawable/baseline_info_24" />

                    <View
                        android:layout_width="160dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/InfoButton"
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Edit Profile"
                        android:padding="5dp"
                        android:src="@drawable/baseline_arrow_forward_ios_24"
                        android:tint="@color/gris"
                        tools:ignore="UseAppTint" />


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



</LinearLayout>
